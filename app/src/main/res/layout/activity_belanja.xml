<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMakanan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/order3"
            android:contentDescription="Gambar"/>

            <TextView
                android:id="@+id/namaMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Nama Makanan"
                android:layout_toRightOf="@id/imgMakanan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/hargaMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgMakanan"
                android:layout_below="@id/namaMakanan"
                android:paddingLeft="10dp"
                android:text="Harga"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/idMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:text="Harga"
                android:textSize="14sp"/>

</RelativeLayout>
